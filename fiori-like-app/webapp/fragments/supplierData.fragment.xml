<core:FragmentDefinition
    xmlns:core = "sap.ui.core" 
    xmlns = "sap.m"
    >

    <Table id="_IDGenTable1" items="{/supplier}">
        <headerToolbar>
            <Toolbar id="tableToolbar" >
                <ToolbarSpacer id="tableToolBarSpacer" />
                    <Button id="filterButton" icon="sap-icon://filter" press="onTableFilter"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column id="_IDGenColumn1">
                <header>
                    <Text id="_IDGenText1" text="Name"></Text>
                </header>
            </Column>
            <Column id="_IDGenColumn2">
                <header>
                    <Text id="_IDGenText2" text="Location"></Text>
                </header>
            </Column>
            <Column id="_IDGenColumn3">
                <header>
                    <Text id="_IDGenText3" text="City"></Text>
                </header>
            </Column>
            <Column id="_IDGenColumn4" minScreenWidth="Desktop" demandPopin="true">
                <header>
                    <Text id="_IDGenText8" text="Since When"></Text>
                </header>
            </Column>
        </columns>
        <items>
            <ColumnListItem id="_IDGenColumnListItem1" >
                <cells>
                    <Text id="_IDGenText4" text="{name}"></Text>
                    <Text id="_IDGenText5" text="{location}"></Text>
                    <Input id="_IDGenText6" value="{city}" showValueHelp="true" valueHelpRequest="onValueHelp"></Input>
                    <Text id="_IDGenText7" text="{since_when}"></Text>
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</core:FragmentDefinition>