<mvc:View 
    xmlns:core="sap.ui.core" 
    xmlns:form="sap.ui.layout.form" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:control = "fiorilikeapp.control"
    controllerName="fiorilikeapp.controller.Details"
    displayBlock="true"
    >

    <Page id="idDetails" title="Details View">
        <content>
            <ObjectHeader id="_IDGenObjectHeader1" 
                icon="{image}"
                title="{name}"
                intro="{benefits}"
                number="{price}"
                numberUnit="{currency}"
            ></ObjectHeader>

            <IconTabBar id="_IDGenIconTabBar1">
                <items>
                    <IconTabFilter id="_IDGenIconTabFilter1" icon="sap-icon://supplier" key="supplier" text="Suppliers">
                        <!-- <control:Heading id="_IDGenHeading1" text = "Suppliers Data"></control:Heading> -->
                        <core:Fragment fragmentName = "fiorilikeapp.fragments.supplierData" type = "XML"></core:Fragment>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter2" icon="sap-icon://information" key="more" text="More Info">
                        <core:Fragment fragmentName = "fiorilikeapp.fragments.moreInfoData" type = "XML"></core:Fragment>
                    </IconTabFilter>
                    <IconTabFilter id="_IDGenIconTabFilter3" icon="sap-icon://home" key="cities" text="City Selected">
                        <core:Fragment fragmentName = "fiorilikeapp.fragments.citySelectedData" type = "XML"></core:Fragment>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>

        <footer>
            <Toolbar id="_IDGenToolbar1" >
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                    <Button id="_IDGenButton1" type="Accept" text="Save" press="onSave"></Button>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
